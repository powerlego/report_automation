<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>

<configuration>
    <contextName>CardIndexer</contextName>
    <import class="ch.qos.logback.classic.encoder.PatternLayoutEncoder" />
    <import class="ch.qos.logback.core.rolling.RollingFileAppender" />
    <import class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy" />
    <import class="ch.qos.logback.classic.filter.ThresholdFilter" />
    <import class="ch.qos.logback.core.ConsoleAppender" />

    <appender name="RollingFile" class="RollingFileAppender">
        <file>${APPDATA}/CardIndexer/logs/indexer.log</file>
        <rollingPolicy class="SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>
                ${env:APPDATA}/CardIndexer/logs/%d{yyyy-MM}/indexer-%d{MM-dd-yyyy}-%i.log.gz</fileNamePattern>
            <maxFileSize>20MB</maxFileSize>
            <maxHistory>10</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="PatternLayoutEncoder">
            <pattern>%d %p %c [%n%m%n%ex]%n</pattern>
        </encoder>
        <filter class="ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <appender name="RollingFileDebug" class="RollingFileAppender">
        <file>${APPDATA}/CardIndexer/logs/indexer-debug.log</file>
        <rollingPolicy class="SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>
                ${env:APPDATA}/CardIndexer/logs/%d{yyyy-MM}/indexer-debug-%d{MM-dd-yyyy}-%i.log.gz</fileNamePattern>
            <maxFileSize>20MB</maxFileSize>
            <maxHistory>10</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="PatternLayoutEncoder">
            <pattern>%d %p %c [%n%m%n%ex]%n</pattern>
        </encoder>

    </appender>
    <appender name="STDOUT" class="ConsoleAppender">
        <encoder class="PatternLayoutEncoder">
            <pattern>%p %c{2} %m%n</pattern>
        </encoder>
        <filter class="ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <logger name="org.me" level="DEBUG" additivity="false">
        <appender-ref ref="RollingFile" />
        <appender-ref ref="RollingFileDebug" />
        <appender-ref ref="STDOUT" />
    </logger>
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>